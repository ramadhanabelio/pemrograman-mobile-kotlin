<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_Angka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nilaiAngka"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_TambahAngka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/tambahAngka" />

    <Button
        android:id="@+id/button_KurangAngka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/kurangAngka"/>

    <Button
        android:id="@+id/button_ResetAngka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/resetAngka"/>

</LinearLayout>